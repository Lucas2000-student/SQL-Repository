SET SERVEROUTPUT ON;

DECLARE
    v_contador NUMBER(10) := 1;
    v_final    NUMBER(10) := &valor_final;
BEGIN
    WHILE v_contador <= v_final LOOP
        dbms_output.put_line(v_contador);
        v_contador := v_contador + 1;
    END LOOP;
EXCEPTION
    WHEN OTHERS THEN
        dbms_output.put_line('Ocorreu um erro:' || sqlerrm);
END;
/

SET SERVEROUTPUT ON;

DECLARE
    v_final    NUMBER(10) := &valor_final;
    
BEGIN

    FOR x IN 1..v_final LOOP
    dbms_output.put_line(x);
    END LOOP;


EXCEPTION 
    WHEN OTHERS THEN
        DBMS_OUTPUT . PUT_LINE ( 'Ocorreu um erro:' || SQLERRM ) ;
    
END;
/

SET SERVEROUTPUT ON;

DECLARE
    v_final    NUMBER(10) := &valor_final;

BEGIN

    FOR x IN REVERSE 1..v_final LOOP
        dbms_output.put_line(x);
    END LOOP;

EXCEPTION 
    WHEN OTHERS THEN
        DBMS_OUTPUT . PUT_LINE ( 'Ocorreu um erro:' || SQLERRM ) ;
    
END;
/



SET SERVEROUTPUT ON;

DECLARE
    v_contador      NUMBER(10) := 1;
    v_fim           NUMBER(10) := 10;
    v_tabuada       NUMBER(10) := &digite_tabuada;
    v_valor_final   NUMBER(10);
    v_escolha       NUMBER(10) := &Escolha_modo;

BEGIN

IF v_escolha = 1 THEN
    LOOP
        v_valor_final := v_tabuada * v_contador;
        DBMS_OUTPUT.PUT_LINE(v_tabuada || ' x ' || v_contador|| ' = '|| v_valor_final);
        v_contador := v_contador + 1;
        EXIT WHEN v_contador > v_fim;
    END LOOP;
ELSIF v_escolha = 2 THEN
    WHILE v_contador <= v_fim LOOP
        v_valor_final := v_tabuada * v_contador;
        DBMS_OUTPUT.PUT_LINE(v_tabuada || ' x ' || v_contador|| ' = '|| v_valor_final);
        v_contador := v_contador + 1;
    END LOOP;
ELSIF v_escolha = 3 THEN
    FOR x IN v_contador..v_fim LOOP
        v_valor_final := v_tabuada * v_contador;
        DBMS_OUTPUT.PUT_LINE(v_tabuada || ' x ' || v_contador|| ' = '|| v_valor_final);
        v_contador := v_contador + 1;
    END LOOP;
ELSE
  DBMS_OUTPUT.PUT_LINE('Opcão Inválida!');
END IF;

EXCEPTION 
    WHEN OTHERS THEN
        DBMS_OUTPUT.PUT_LINE ( 'Ocorreu um erro:' || SQLERRM ) ;
    
END;
/

